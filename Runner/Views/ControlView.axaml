<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Runner.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Runner.Views.ControlView">
    
    <Design.DataContext>
        <viewModels:ControlViewModel/>
    </Design.DataContext>
    
    <Grid ColumnDefinitions="5*, *, 5*" >
        <WrapPanel>
            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6 0 0 4">Number of instances</Label>
            <NumericUpDown Margin="4" Value="{Binding InstancesCount}" Background="#222222"></NumericUpDown>
        </WrapPanel>
        <WrapPanel Grid.Column="1" HorizontalAlignment="Center" Margin="2" >
            <Button Margin="12 0 0 0" Height="28" Background="Transparent" Command="{Binding RunDistances}" 
                    CommandParameter="{Binding ParametersViewModel.SelectedData}">
                <Image Source="/Assets/run.png"></Image>
            </Button>
            <Button Height="28" Background="Transparent">
                <Image Source="/Assets/stop.png"></Image>
            </Button>
        </WrapPanel>
    </Grid>
    
    
    
</UserControl>
